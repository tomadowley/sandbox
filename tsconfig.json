{
  "compilerOptions": {
    // Specifies the ECMAScript target version for compiled JavaScript
    "target": "es5",
    // List of library files to be included in the compilation
    "lib": [
      "dom",        // Includes DOM definitions
      "dom.iterable", // Includes DOM iterable definitions
      "esnext"      // Includes definitions for future JavaScript features
    ],
    // Allows JavaScript files to be compiled
    "allowJs": true,
    // Skip type checking of declaration files (.d.ts)
    "skipLibCheck": true,
    // Enables CommonJS module interop with ES6 modules
    "esModuleInterop": true,
    // Allows default imports from modules with no default export
    "allowSyntheticDefaultImports": true,
    // Enables all strict type checking options
    "strict": true,
    // Ensures consistent casing in file references
    "forceConsistentCasingInFileNames": true,
    // Prevents falling through from one case to another in switch statements
    "noFallthroughCasesInSwitch": true,
    // Specifies the module system for the output JavaScript
    "module": "esnext",
    // Determines how modules are resolved
    "moduleResolution": "node",
    // Allows importing JSON files as modules
    "resolveJsonModule": true,
    // Ensures that each file can be safely transpiled without relying on other imports
    "isolatedModules": true,
    // Does not emit compiler output files like JavaScript source code
    "noEmit": true,
    // Supports JSX syntax for React components
    "jsx": "react-jsx"
  },
  // Specifies which files TypeScript should include in the compilation
  "include": [
    "src"
  ]
}
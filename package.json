{
  // Project metadata and configuration for a React application bootstrapped with Create React App
  "name": "sandbox",
  "version": "0.1.0",
  "private": true,

  // External libraries and frameworks required by the application
  "dependencies": {
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.120",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-scripts": "5.0.1",
    "typescript": "^4.9.5",
    "web-vitals": "^2.1.4"
  },

  // Custom commands for common development tasks
  "scripts": {
    "start": "react-scripts start",     // Starts the development server
    "build": "react-scripts build",     // Creates a production-ready build
    "test": "react-scripts test",       // Runs the test suite
    "eject": "react-scripts eject"      // Ejects CRA configuration (one-way operation)
  },

  // Linting configuration for maintaining code quality
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },

  // Target browser environments for compatibility
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}

{
  "name": "React App - Test Container",
  "build": {
    "dockerfile": "Dockerfile",
    "args": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode"
      ]
    }
  },
  "settings": {
    "terminal.integrated.defaultProfile.linux": "bash",
    "bash.format.terminal.shellIntegration": true,
    "editor.formatOnSave": false
  },
  "postCreateCommand": "yarn install",
  "remoteUser": "node",
  "runArgs": [],
  "forwardPorts": [
    {
      "hostPort": "4000",
      "containerPort": 3000,
      "label": "3000"
    }
  ]
}